---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import '../styles/cards.css';

const title = 'Portfolio';
const description = "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s";
const img = 'https://picsum.photos/1200/900/?image=823';
const action = '';

import imgEco from '../images/portfolio/eco.png';
import imgFloating from '../images/portfolio/floating.png';
import imgGoals from '../images/portfolio/goals.png';
import imgGraduation from '../images/portfolio/graduation.png';
import imgHiking from '../images/portfolio/hiking.png';
import imgPlayful from '../images/portfolio/playful.png';
---

<Layout
	title={title}
	description={description}
	img={img}
	action={action}
>

<div uk-filter="target: .js-filter; animation: fade">

	<!--CARDS WRAPPER-->
	<section class="uk-section uk-section-small uk-section-default uk-padding-remove-bottom">
		<div class="uk-container uk-container-expand uk-margin-large-bottom">

			<form id="search-form" action="">
				<div class="uk-inline uk-form-width-large uk-margin">
					<span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: search"></span>
					<input class="uk-input search-fld" type="text" placeholder="Type your search" autofocus>
					<a hidden href="#" class="search-filter" data-uk-filter-control="[tags*='']">Search</a>
					<a hidden href="#" class="search-filter-all" data-uk-filter-control>Search all</a>
					<a hidden href="#" class="search-filter-none" data-uk-filter-control="[empty='']">Filter none</a>
				</div>
			</form>

			<ul class="uk-subnav uk-subnav-pill">
				<li class="uk-active" data-uk-filter-control=""><a href="#">Show All</a></li>
				<li data-uk-filter-control=".nature-card"><a href="#">Nature</a></li>
				<li data-uk-filter-control=".music-card"><a href="#">Music</a></li>
				<li data-uk-filter-control=".photo-card"><a href="#">Photography</a></li>
				<li data-uk-filter-control=".design-card"><a href="#">Design</a></li>
			</ul>
			<div class="uk-grid uk-grid-medium uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l  uk-child-width-1-5@xl uk-grid-match js-filter" uk-grid="masonry: true" uk-sortable="handle: .drag-icon">

				<!-- card -->
				<Card
					filterCategory='nature-card'
					title='Nature / Outdoor'
					description='A BEAUTIFUL LANDSCAPE HERE'
					body='Duis aute irure dolor in reprehenderit in voluptate velit'
					img= {imgEco}
					readTime= {6}
					comments= {120}
					likes= {220}
					twitter = 'https://twitter.com/'
					facebook = 'https://www.facebook.com/'
					youtube = 'https://www.youtube.com/'
					tiktok = 'https://www.tiktok.com/'
					instagram = 'https://www.instagram.com/'
					behance ='';
					pinterest = '';
				/>

				<Card
					filterCategory='photo-card'
					title='Photography'
					description='AMAZING LANDSCAPE PICTURES'
					body='Duis aute irure dolor in reprehenderit in voluptate velit'
