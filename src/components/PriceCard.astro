---
interface Props {
	title: string;
	price: string;
	planTitle: string;
	planItems: Array<string>;
	linkUrl: string;
}

const { title, price, planTitle, planItems, linkUrl } = Astro.props;
---

<!-- price -->
<div>
	<div class="uk-card uk-card-default uk-card-hover uk-flex uk-flex-column" uk-scrollspy-class="uk-animation-slide-left-small">
		<div class="uk-card-header uk-text-center">
			<h4 class="uk-text-bold">{title}</h4>
		</div>
		<div class="uk-card-body uk-flex-1">
			<div class="uk-flex uk-flex-middle uk-flex-center">
				<span style="font-size: 4rem; font-weight: 200; line-height: 1em">
					<span style="font-size: 0.5em">$</span>{price}
					<!-- <span style="font-size: 0.5em">$</span>9<small>.99</small> -->
				</span>
			</div>
			<div class="uk-text-small uk-text-center uk-text-muted">{planTitle}</div>
			<ul>
				{planItems.map((item) => (
					<li>{item}</li>
				))}
			</ul>
		</div>
		<div class="uk-card-footer">
			<a href={linkUrl} class="uk-button uk-button-primary uk-width-1-1">BUY NOW</a>
		</div>
	</div>
</div>
<!-- /price -->