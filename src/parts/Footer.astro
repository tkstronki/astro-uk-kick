---
interface Props {
    logo: ImageMetadata;
    siteName: string;
    menuLinks: object;
    socialMediaLinks: object;
	authorName: string;
	authorLink: string;
	astroThemeURL: string;


}
const { logo, siteName, menuLinks, socialMediaLinks, authorName, authorLink, astroThemeURL } = Astro.props;

const date = new Date().getFullYear();


import { Image } from 'astro:assets';
---

<!-- FOOTER -->
<footer class="uk-section uk-section-secondary uk-padding-remove-bottom">
	<div class="uk-container">
